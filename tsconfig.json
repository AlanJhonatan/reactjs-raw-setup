{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck":  true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src"
  ],
}
